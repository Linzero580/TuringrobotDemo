<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/id_to_msg_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="#bebebe"
        android:text="2017-8-11 12:00:00"
        android:textColor="#f5f5f5"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <TextView
            android:id="@+id/id_to_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/lly_me"
            android:background="@drawable/chatto_bg_normal"
            android:gravity="center_vertical"
            android:text="你好"
            android:textSize="20sp" />

        <RelativeLayout
            android:id="@+id/lly_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="3dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_me"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/me" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_me"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="zero"
                android:textSize="18sp" />
        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>